<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link
      href='https://fonts.googleapis.com/css?family=IBM+Plex+Sans:400,400i,700&display=swap'
      rel='stylesheet'
    />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css'
    />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Tech Blogger</title>
  </head>

  <body class='flex-column min-100-vh'>
    <div>
      <header class='hero'>
        <nav>
          {{#if loggedIn}}
            <a href='/' class='btn-no-style'>Home</a>
            <a href='/dashboard' class='btn-no-style'>Dashboard</a>
            <button id='logout' class='btn-no-style'>Logout</button>
          {{else}}
            <a href='/login' class='btn-no-style'>Login</a>
          {{/if}}
        </nav>

        <h1 class='app-title'>
          <a href='/' id='title'>Tech Blogger</a>
        </h1>
      </header>

      <main>
        {{{body}}}
      </main>

      <footer>
        Thanks for visiting! &copy;2022 SuperDasMan Studios, LLC.
      </footer>
    </div>

    {{#if loggedIn}}
      <script src='/javascript/logout.js'></script>
    {{/if}}
  </body>

</html>